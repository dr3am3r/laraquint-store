# Configuration for Cloudflare proxied setup (Full SSL mode)
# Caddy will auto-generate self-signed certificates for Cloudflare to connect to

{$DOMAIN:api.laraquint.com} {
    # Reverse proxy to Medusa server
    reverse_proxy medusa-server:9000 {
        # Health check
        health_uri /health
        health_interval 10s
        health_timeout 5s

        # Trust Cloudflare's headers
        header_up X-Real-IP {http.request.header.CF-Connecting-IP}
        header_up X-Forwarded-For {http.request.header.CF-Connecting-IP}
        header_up X-Forwarded-Proto https
    }

    # Enable gzip compression
    encode gzip

    # Security headers
    header {
        # Prevent clickjacking
        X-Frame-Options "SAMEORIGIN"
        # Prevent MIME type sniffing
        X-Content-Type-Options "nosniff"
        # XSS Protection
        X-XSS-Protection "1; mode=block"
        # Remove Server header
        -Server
    }

    # Logging
    log {
        output stdout
        format json
    }
}
